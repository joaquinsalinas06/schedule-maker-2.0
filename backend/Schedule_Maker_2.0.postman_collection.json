    {
      "name": "Schedule Builder",
      "item": [
        {
          "name": "Step 1: Get Available Courses",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/schedules/courses?semester=2024-2",
              "host": ["{{base_url}}"],
              "path": ["api", "schedules", "courses"],
              "query": [
                {
                  "key": "semester",
                  "value": "2024-2"
                }
              ]
            }
          }
        },
        {
          "name": "Step 2: Generate Combinations from Courses",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Combinations generated successfully\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data.combinations && jsonData.data.combinations.length > 0) {",
                  "        pm.collectionVariables.set('combination_id', jsonData.data.combinations[0].combination_id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"selected_sections\": [6, 9, 12],\n  \"semester\": \"2024-2\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/schedules/generate",
              "host": ["{{base_url}}"],
              "path": ["api", "schedules", "generate"]
            }
          }
        },
